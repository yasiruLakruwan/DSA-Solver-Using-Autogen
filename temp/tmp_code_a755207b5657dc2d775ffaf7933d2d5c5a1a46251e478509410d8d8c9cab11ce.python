def is_even(number):
  """
  Checks if a number is even.

  Args:
    number: The number to check.

  Returns:
    True if the number is even, False otherwise.  Returns False if input is not an integer.
  """
  if isinstance(number, int):
    return number % 2 == 0
  else:
    return False

# Example usage
num1 = 10
num2 = 7
num3 = "hello"

print(is_even(num1))  # Output: True
print(is_even(num2))  # Output: False
print(is_even(num3))  # Output: False
